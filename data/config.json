{
  "training_config": {
    "data_path": "data/synthetic/training/logs.json",
    "test_split": 0.2,
    "anomaly_threshold": 0.5,
    "models": [
      "isolation_forest",
      "lstm_autoencoder"
    ],
    "class_balance": "50:50"
  },
  "streaming_config": {
    "data_path": "data/synthetic/streaming/logs.json",
    "kafka_topic": "system-logs",
    "batch_size": 10,
    "interval_ms": 100
  },
  "services": [
    "api-gateway",
    "auth-service",
    "user-service",
    "payment-service",
    "inventory-service",
    "notification-service",
    "analytics-service",
    "cache-service",
    "database-primary",
    "database-replica"
  ],
  "anomaly_types": [
    "high_cpu",
    "high_latency",
    "disk_issue",
    "network_issue",
    "connection_pool",
    "high_error_rate",
    "high_memory"
  ]
}