{
  "agents": {
    "anomaly_detector": {
      "enabled": true,
      "model_path": "ml_pipeline/saved_models",
      "confidence_threshold": 0.7
    },
    "mitigation": {
      "enabled": true,
      "common_error_threshold": 0.8
    },
    "rag": {
      "enabled": true,
      "knowledge_base_path": "data/knowledge_base",
      "max_context_length": 4000
    },
    "advanced_llm": {
      "enabled": true,
      "model": "gpt-4",
      "max_tokens": 2000
    },
    "database": {
      "enabled": true,
      "db_path": "data/sre_agent.db"
    },
    "paging": {
      "enabled": true,
      "paging_webhook": "https://api.pagerduty.com/v2/incidents",
      "escalation_policy": "default"
    }
  },
  "processing": {
    "batch_size": 100,
    "max_retries": 3,
    "timeout_seconds": 30
  },
  "kafka": {
    "bootstrap_servers": "localhost:9092",
    "topic": "system-logs",
    "consumer_group": "sre-agent-group",
    "auto_offset_reset": "latest",
    "enable_auto_commit": true
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/sre_agent.log"
  },
  "monitoring": {
    "metrics_enabled": true,
    "health_check_interval": 60,
    "stats_collection_interval": 300
  }
} 